<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.khassraf.gat.app"
    android:versionCode="2"
    android:versionName="0.5.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="18" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light" >
        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposedminversion"
            android:value="30+" />
        <meta-data
            android:name="xposeddescription"
            android:value="GAT-App provides capability of sending several types of SMS that are not available by default." />

        <activity
            android:name="at.khassraf.gat.app.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="at.khassraf.gat.app.SendClass0SMSActivity"
            android:label="@string/title_activity_send_class0" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="at.khassraf.gat.app.MainActivity" />
        </activity>
        <activity
            android:name="at.khassraf.gat.app.SendMessagelessSMSActivity"
            android:label="@string/title_activity_send_messageless_sms"
            android:parentActivityName="at.khassraf.gat.app.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="at.khassraf.gat.app.MainActivity" />
        </activity>

        <receiver android:name="at.khassraf.gat.app.SMSSentReceiver" >
            <intent-filter>
                <action android:name="SMS_SENT" />
            </intent-filter>
        </receiver>
        <receiver android:name="at.khassraf.gat.app.SMSDeliveryReceiver" >
            <intent-filter>
                <action android:name="SMS_DELIVERED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="at.khassraf.gat.app.ServerModeActivity"
            android:label="@string/title_activity_server_mode"
            android:parentActivityName="at.khassraf.gat.app.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="at.khassraf.gat.app.MainActivity" />
        </activity>
    </application>

</manifest>
